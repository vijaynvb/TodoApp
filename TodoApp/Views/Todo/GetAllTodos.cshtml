@model List<Todo>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<H1>Get All Todos</H1>

<a asp-action="Create" asp-controller="Todo">Add Todo</a>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th scope="col">Due Date</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach(var todo in Model){
        <tr>
          <th scope="row">@todo.Id</th>
          <td>@todo.Title</td>
          <td>@todo.Description</td>
          <td>@todo.Status</td>
          <td>@todo.DueDate</td>
          <td><a asp-controller="Todo" asp-action="Details" asp-route-todoId="@todo.Id">View</a></td>
          <td><a asp-controller="Todo" asp-action="Update" asp-route-todoId="@todo.Id">Edit</a></td>
          <td><a asp-controller="Todo" asp-action="Delete" asp-route-todoId="@todo.Id" >Delete</a></td>
        </tr>
    }
  </tbody>
</table>