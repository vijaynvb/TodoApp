@model List<ApplicationUser>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<H1>Get All Users</H1>

<a asp-action="Create" asp-controller="User">Add User</a>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Roles</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach(var user in Model){
        <tr>
          <th scope="row">@user.Id</th>
          <td>@user.FirstName</td>
          <td>@user.LastName</td>
          <td>@user.Email</td>
          <td></td>
          <td><a asp-controller="User" asp-action="Details" asp-route-userId="@user.Id">View</a></td>
          <td><a asp-controller="User" asp-action="Update" asp-route-userId="@user.Id">Edit</a></td>
          <td><a asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id" >Delete</a></td>
        </tr>
    }
  </tbody>
</table>